let agit_action = {}
function! agit_action.func(dir)
  if isdirectory(a:dir.word)
    let dir = fnamemodify(a:dir.word, ':p')
  else
    let dir = fnamemodify(a:dir.word, ':p:h')
  endif
  execute 'Agit --dir=' . dir
endfunction
call unite#custom#action('file,cdable', 'agit', agit_action)

set tabstop=4
set autoindent
set expandtab
set shiftwidth=4

